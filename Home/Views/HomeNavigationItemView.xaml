<UserControl x:Class="Home.Views.HomeItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Button x:Name="Home" ToolTip="メニュー切り替えテスト用" ToolTipService.InitialShowDelay="0" 
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        Click="Home_Click">
        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon x:Name="PackIcon" Kind="Home" />
            <TextBlock Margin="6 0 0 0" Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Text="ホーム" />
        </StackPanel>
    </Button>
</UserControl>
